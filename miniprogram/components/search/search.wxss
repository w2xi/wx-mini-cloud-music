@import 'iconfont.wxss';
.search-container{
  display: flex;
  align-items: center;
  margin-left: 20rpx;
  position: relative;
}
.search-key{
  flex: 1;
  height: 68rpx;
  font-size: 28rpx;
  background-color: #f5f5f5;
  border-radius: 50rpx;
  padding-left: 60rpx;
  padding-right: 60rpx;
}
/* button内置了很多样式，这样写是考虑了优先级(权重)的问题 */
.search-container button.search-btn{
  width: 120rpx;
  color: #fff;
  background-color: #2ECC71;
  font-size: 28rpx;
  margin-left: 20rpx;
  border-radius: 30rpx;
}
.icon-sousuo{
  position: absolute;
  left: 0; top: 50%;
  /* translate: 平移；参数可以是 数值或百分比
     1. 第一个参数表示向 水平方向 移动，默认方向向 右，负号表示方向相反
     2. 第二个参数表示向 垂直方向 移动，默认向下
     如果参数是百分比，100% 表示移动距离=该容器的宽度或高度
   */
  transform: translate(50%, -50%);
}
.icon-shanchu{
  position: absolute;
  right: 140rpx; top: 50%;
  transform: translate(-50%, -50%);
  font-size: 30rpx;
  /* 增大可点击区域 */
  padding: 5rpx; 
}