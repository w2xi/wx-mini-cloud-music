.release-container{
  padding: 20rpx;
}
.release-content{
  width: 100%;
  height: 300rpx;
  color: #333;
  font-size: 32rpx;
}
.placeholder-text{
  font-size: 32rpx;
  color: #666;
}
.notice{
  font-size: 30rpx;
  color: #666;
  padding: 20rpx 0;
}
.add-img-padding{
  height: 200rpx; 
  width: 200rpx;
  padding: 10rpx;
}
.add-img{
  height: 200rpx; 
  width: 200rpx;
  border: 1px dotted #ccc;
  box-sizing: border-box;
  /* 将图标水平垂直居中 */
  display: flex;
  align-items: center;
  justify-content: center;
} 
.icon-tianjia{
  font-size: 40rpx;
}
.images-wrap{
  display: flex;
  flex-wrap: wrap;
}
.images-wrap .img-item{
  height: 200rpx; 
  width: 200rpx;
  padding: 10rpx;
  position: relative;
}
.img{
  max-width: 100%;
  max-height: 100%;
}
.icon-shanchu{
  position: absolute;
  top: 0; right: 0;
  padding: 15rpx;
}
.footer{
  position: fixed;
  bottom: 0;
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: flex-end;
  padding: 20rpx 0;
}
.footer .release-btn{
  width: 120rpx;
  color: #fff;
  background-color: #2ECC71;
  font-size: 28rpx;
  margin: 0 30rpx;
}
.content-len{
  color: #333;
}