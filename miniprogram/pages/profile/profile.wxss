page{
  background: #efefef;
}
.bg-container,
.mask{
  position: absolute;
  top: 0; left: 0;
  width: 100%;
  height: 480rpx;
}
.bg-container{
  filter: blur(30rpx);
  z-index: -1;
  opacity: .8;
}
.mask{
  background: #666;
  z-index: -2;
}
.user-info{
  height: 460rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.user-avatar{
  height: 150rpx;
  width: 150rpx;
  border-radius: 50%;
  overflow: hidden;
}
.user-nickname{
  margin: 20rpx;
  color: #333;
  font-size: 40rpx;
}
.nav{
  padding: 0 20rpx;
  margin-top: 50rpx;
}
.nav .item{
  background: #fff;
  margin-bottom: 10rpx;
  border-radius: 20rpx;
}
.content{
  display: flex;
  align-items: center;
  padding: 30rpx 20rpx;
}
.icon{
  color: #2ECC71;
  font-size: 34rpx;
  padding: 0 20rpx;
}
.title{
  flex: 1;
  color: #333;
  font-size: 30rpx;
}
.icon-you{
  padding: 0 30rpx;
  font-size: 34rpx;
}