.bg-container,
.mask,
.coverInfo{
  height: 300rpx;
}
.bg-container{
  filter: blur(30rpx);
}
.mask,
.coverInfo{
  position: absolute;
  top: 0; left: 0;
}
.mask{
  width: 100%;
  background-color: #333;
  opacity: .3;
  z-index: -1;
}
.coverInfo{
  display: flex;
  align-items: center;
  text-align: center;
  padding: 0 20rpx;
}
.coverInfo-img{
  max-height: 260rpx;
  width: 220rpx;
}
.coverInfo-name{
  flex: 1;
  color: #fff;
  font-size: 36rpx;
}